<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AstonLesson2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="myCustomClockStyle">@style/DefaultMyCustomClockStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DefaultMyCustomClockStyle">
        <item name="secondHandColor">#000066</item>
        <item name="secondHandWidth">10</item>
        <item name="secondHandLength">20</item>

        <item name="minuteHandColor">#660000</item>
        <item name="minuteHandWidth">20</item>
        <item name="minuteHandLength">40</item>

        <item name="hourHandColor">#000000</item>
        <item name="hourHandWidth">40</item>
        <item name="hourHandLength">80</item>
    </style>
</resources>