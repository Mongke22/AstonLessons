<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/aston_main"
        app:layout_constraintBottom_toBottomOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/aston_logo"
        app:layout_constraintStart_toStartOf="@id/leftGuideLine"
        app:layout_constraintTop_toBottomOf="@id/guideline" />

    <TextView
        android:id="@+id/mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="ИТ-решения для развития бизнеса"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/rightGuideLine"
        app:layout_constraintStart_toEndOf="@id/logo"
        app:layout_constraintTop_toBottomOf="@id/guideline" />

    <TextView
        android:id="@+id/subText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Разработка программного обеспечения"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/rightGuideLine"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/logo"
        app:layout_constraintTop_toBottomOf="@id/mainText" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/logo_section"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="subText, mainText, logo"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="356dp" />

    <TextView
        android:id="@+id/about"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="О нас:"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/rightGuideLine"
        app:layout_constraintStart_toEndOf="@id/leftGuideLine"
        app:layout_constraintTop_toBottomOf="@id/logo_section" />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aston — компания по разработке ПО с полным циклом услуг. Уже 15 лет мы помогаем заказчикам по всему миру трансформировать бизнес, создавая эффективные мобильные и десктопные решения."
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/rightGuideLine"
        app:layout_constraintStart_toEndOf="@id/leftGuideLine"
        app:layout_constraintTop_toBottomOf="@id/about" />

    <TextView
        android:id="@+id/offices"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Офисы"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/rightGuideLine"
        app:layout_constraintStart_toEndOf="@id/leftGuideLine"
        app:layout_constraintTop_toBottomOf="@id/description" />


    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupToHide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="myFlow, myButtons, offices" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/myFlow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="office_1, office_2, office_3, office_4, office_5, office_6"
        app:flow_horizontalBias="0"
        app:flow_horizontalGap="5dp"
        app:flow_horizontalStyle="packed"
        app:flow_verticalGap="5dp"
        app:flow_verticalStyle="packed"
        app:flow_wrapMode="chain"
        app:layout_constraintEnd_toEndOf="@id/rightGuideLine"
        app:layout_constraintStart_toStartOf="@id/leftGuideLine"
        app:layout_constraintTop_toBottomOf="@id/offices" />

    <TextView
        android:id="@+id/office_1"
        style="@style/greyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Санкт-Петербург" />

    <TextView
        android:id="@+id/office_2"
        style="@style/greyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ростов-на-Дону" />

    <TextView
        android:id="@+id/office_3"
        style="@style/greyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Казань" />

    <TextView
        android:id="@+id/office_4"
        style="@style/greyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Алматы" />

    <TextView
        android:id="@+id/office_5"
        style="@style/greyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Гомель" />

    <TextView
        android:id="@+id/office_6"
        style="@style/greyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Витебск" />


    <androidx.constraintlayout.widget.Group
        android:id="@+id/myButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="firstBtn, secondBtn, thirdBtn"
        />
    <Button
        android:id="@+id/firstBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Контакты"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toStartOf="@id/secondBtn"
        app:layout_constraintStart_toStartOf="@id/leftGuideLine"
        app:layout_constraintTop_toBottomOf="@id/myFlow"
        app:layout_constraintHorizontal_chainStyle="spread"
        />

    <Button
        android:id="@+id/secondBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вакансии"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toStartOf="@id/thirdBtn"
        app:layout_constraintStart_toEndOf="@id/firstBtn"
        app:layout_constraintTop_toBottomOf="@id/myFlow" />

    <Button
        android:id="@+id/thirdBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Галерея"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@id/rightGuideLine"
        app:layout_constraintStart_toEndOf="@id/secondBtn"
        app:layout_constraintTop_toBottomOf="@id/myFlow" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintStart_toStartOf="@id/leftGuideLine"
        app:layout_constraintEnd_toEndOf="@id/rightGuideLine"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        tools:visibility="visible"
        />
</androidx.constraintlayout.widget.ConstraintLayout>